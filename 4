#include <stdio.h>

void inicializar(int mat[10][10], int tam){
	for(int x = 0;x < tam; x++)
		*(*mat + x) = 0;
}

void imprimir(int mat[10][10],int tam){
	for(int x = 0; x < tam; x++){
		if (x % 10 == 0)
			printf("\n");
		printf(" %2.1i ",*(*mat + x));	
	}
}

void preencher(int mat[10][10], int tam){
	int count = 99;
	for(int x = 0;x < tam; x++){
		*(*mat + x) = count;
		count--;
	}
}



int main() {
	
	int matriz[10][10];
	int tam = sizeof(matriz)/sizeof(int);
	
	inicializar(matriz, tam);
	imprimir(matriz, tam);
	
	printf("\n");
	
	preencher(matriz, tam);
	imprimir(matriz, tam);
	
	
	return 0;
}
